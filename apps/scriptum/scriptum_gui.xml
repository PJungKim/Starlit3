   <item label = "&amp;6"                   cmd = "LoadMruFile6"/>
   <item label = "&amp;7"                   cmd = "LoadMruFile7"/>
   <item label = "&amp;8"                   cmd = "LoadMruFile8"/>
   <item label = "&amp;9"                   cmd = "LoadMruFile9"/>
  </popup>

  <popup caption="&amp;Edit">
   <item label = "&amp;Undo"                cmd = "EditUndo"/>
